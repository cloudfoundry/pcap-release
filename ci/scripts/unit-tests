#!/bin/bash

set -euo pipefail

cd "${REPO_ROOT}"

echo "> Running 'bundle exec rake spec'"
bundle package
bundle exec rake spec

echo "> Running unit tests"
pushd src/pcap
  go test -count=1 -v $(go list ./... | grep -v test/integration)
popd

echo "> Running integration tests (ginkgo)"
pushd src/pcap/test/integration
  ginkgo -r -trace -vv
popd
